let likesBlock = $('.likes-block#likes-block-<%= @likeable.class.to_s.underscore %>-<%= @likeable.id %>')
<% if @like.persisted? %>
	likesBlock.find('i').removeClass('fa-heart-o').addClass('fa-heart')
<% else %>
	likesBlock.find('i').removeClass('fa-heart').addClass('fa-heart-o')
<% end %>
likesBlock.find('span').text("<%= pluralize(@likeable.likes_count, 'like') %>")
